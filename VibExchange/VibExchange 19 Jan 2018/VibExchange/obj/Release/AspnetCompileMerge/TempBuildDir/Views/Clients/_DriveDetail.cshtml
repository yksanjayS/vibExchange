@model VibExchange.Models.UploadFile

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<h4 style="color: chocolate; margin-left: 10px;">Your machine detail.. </h4>
<div class="row-fluid" style="padding-left: 20px">
    <section id="DriveUnit">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" }) 
            <div class=" form-horizontal" role="form">
                <div class="form-group ">
                    @Html.LabelFor(model => model.TrainName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.TrainName, new { @class = "form-control", id = "TrainID", @readonly = true })
                    </div>
                </div>
                <div class="form-group ">
                    @Html.LabelFor(model => model.MachineOrientaion, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.MachineOrientaion, new { @class = "form-control", id = "TrainID", @readonly = true })
                    </div>
                </div>
                <div class="form-group ">
                    @Html.LabelFor(model => model.MountingType, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.MountingType, new { @class = "form-control", id = "TrainID", @readonly = true })
                    </div>
                </div>
                <div class="form-group ">
                    @Html.LabelFor(model => model.DEUnitType, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.DEUnitType, new { @class = "form-control", id = "TrainID", @readonly = true })
                    </div>
                </div>
                <div class="form-group ">
                    @Html.LabelFor(model => model.DURPM, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.DURPM, new { @class = "form-control", id = "DURPM", placeholder = "Fill rpm", @readonly = true })
                    </div>
                </div>
                <div class="form-group ">
                    @Html.LabelFor(model => model.BearingLubrication, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.BearingLubrication, new { @class = "form-control", id = "DURPM", placeholder = "Fill rpm", @readonly = true })
                    </div>
                </div>
                <div class="form-group ">
                    @Html.LabelFor(model => model.bearingMake, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.bearingMake, new { @class = "form-control", id = "BerMake", @readonly = true })
                    </div>
                </div>
                <div class="form-group ">
                    @Html.LabelFor(model => model.bearingNoDE, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.bearingNoDE, new { @class = "form-control", id = "BerDE", @readonly = true })
                    </div>
                </div>
                <div class="form-group ">
                    @Html.LabelFor(model => model.bearingNoNDE, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.bearingNoNDE, new { @class = "form-control", id = "BerNDE", @readonly = true })
                    </div>
                </div>
                <div class="form-group ">
                    @Html.LabelFor(model => model.NoOfPoles, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.NoOfPoles, new { @class = "form-control", id = "BerNDE", @readonly = true })
                    </div>
                </div>
                <div class="form-group ">
                    @Html.LabelFor(model => model.Point_Count_DE, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Point_Count_DE, new { @class = "form-control", placeholder = "Data Collected Points", @readonly = true })
                    </div>
                </div>
            </div>
        }
    </section>
</div>
  <hr />


