    }

    .consDeatil {
        margin-left: 0px;
        /*margin-right:10px;*/
        background-color: #fff;
        border: 1px solid;
        border-radius: 7px 7px 7px 7px;
        width: 100%;
        height: 200px;
        text-align: left;
        box-shadow: -3px 5px 10px #ccc,inset -3px 5px 10px #0094ff;
        box-sizing: border-box;
    }

    .consImage {
        width: 120px;
        float: left;
        box-sizing: border-box;
    }

    .doc_avatar {
        max-width: 100px;
        max-height: inherit;
        border-radius: 3px;
        width: 100%;
        background-color: lightgray;
    }
</style>
<div class="row-fluid">
    @foreach (var item in Model)
    {
        <div class="consDeatil col-md-10">
            <div style="width: 70%; float: left; margin-top: 20px;">
                <div class="consImage">
                    @if (item.imageSrc != null && item.imageSrc != "")
                    {
                        <img src="~/Images/@item.imageSrc" class="doc_avatar" title="@item.Name - @item.City" />
                    }
                </div>
                <div style="width: 70%; float: right; line-height: 22px;">
                    <div style="font-size: 16px; color: #49b1d1;">
                        @Html.DisplayFor(modelItem => item.Name)
                    </div>
                    <div style="font-weight: bold; line-height: 1.5;">
                        @Html.DisplayFor(modelItem => item.specs)
                    </div>
                    <div style="max-width: 100%; color: #7f7f7f; line-height: 1.2; text-overflow: ellipsis; white-space: nowrap; display: block; vertical-align: text-bottom;">
                        @Html.DisplayFor(modelItem => item.Experience) Experience
                    </div>
                    <div style="margin: 8px 0;">
                        @Html.DisplayFor(modelItem => item.companyName)
                    </div>
                </div>
            </div>

            <div style="width: 30%; float: right; text-align: center; margin-top: 20px;">
                <div>
                    <a href="#">
                        Feedback
                    </a>
                    @* @Html.ActionLink("Feedback", "Details", new { /* id=item.PrimaryKey */ })*@
                </div>
                <div>
                    @Html.DisplayFor(modelItem => item.City)
                </div>
                <div>
                    @Html.DisplayFor(modelItem => item.State)
                </div>
                <div>
                    @Html.DisplayFor(modelItem => item.certification)
                </div>
                @* <div style="vertical-align:text-bottom;">
                    <a href="@Url.Action("GetConsContactDetail", "Employee", new { area = "Categories", id = item.EmpID }) data-toggle="modal", data-target="#GetContactDeatil" data-modal="myModal" title="File Detail" >
                        <input type="button" id="btnContactDetail" value="Contact Detail" class="btn-primary" />
                    </a>
                        </div>*@
            </div>

        </div>
    }
</div>
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" style="padding-right: 10px; padding-top: 10px; color: red;" class="close" data-dismiss="modal" aria-hidden="false" onclick="closeModal()">Close</button>
            <div id='myModalContent'>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $.ajaxSetup({ cache: false });
        $("a[data-modal]").on("click", function (e) {
            $('#myModalContent').load(this.href, function () {
                $('#myModal').toggle();
                //$('#myModal').modal({
                //    /*backdrop: 'static',*/
                //    keyboard: true
                //}, 'show');
            });
            return false;
        });
    });
    function closeModal() {
        $('#myModal').toggle();
    }
</script>
