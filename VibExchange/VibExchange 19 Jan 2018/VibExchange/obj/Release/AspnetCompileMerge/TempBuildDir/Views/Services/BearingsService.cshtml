@model VibExchange.Models.AnalysisMethod

@{
    ViewBag.Title = "Rolling Element Analysis Services";
    Layout = "~/Views/Shared/_VibExchangeLayout.cshtml";
}
<style>
    #coverpage {
        background: url("../Images/Bearing11.jpeg") no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }
</style>
<div id="coverpage" class="row-fluid" style="height:inherit;width:inherit;">
    <div>
        <div class=" col-md-3 col-md-offset-4" style="padding-top:20%;">
            <h2 style="color:floralwhite;text-align:center;background-color:darkcyan">Bearing Fault Analysis</h2>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="container">
        <div class="page-text">
            <div class="row">
                <p>
                    The main charecteristic of Bearing is to ensure free rotation of the shaft or the axle with minimum friction. Bearing facilitates free moving of the shaft or the axle
                    and holds it in correct position.There are many causes of bearing damage likewise
                    Bearing Misalignment, Vibration Brinell (False Brinell), Electrical Damage (Fluting), Improper Bearing Lubrication, Bearing Corrosion, Bearing Fatigue, High Temperatures etc.<br />
                </p>
                <div class="col-md-4">
                    <p>
                        <span style=" font-size:16px; color:#49b1d1;">
                            VibExchange is Solution for your
                        </span>
                    </p>
                    <p>
                        <span>
                            <img style="padding-right: 10px;" src="~/Images/steps.png" />
                            Bearing Cage Damage
                        </span>
                    </p>
                    <p>
                        <span>
                            <img style="padding-right: 10px;" src="~/Images/steps.png" />
                            Faults of Journal Bearing Wear
                        </span>
                    </p>
                    <p>
                        <span>
                            <img style="padding-right: 10px;" src="~/Images/steps.png" />
                            Faults of Journal Bearing Oil Whirl
                        </span>
                    </p>
                    <p>
                        <span>
                            <img style="padding-right: 10px;" src="~/Images/steps.png" />
                            Faults of Bearing Smearing
                        </span>
                    </p>
                    <p>
                        <span>
                            <img style="padding-right: 10px;" src="~/Images/steps.png" />
                            of Bearing Corrosion
                        </span>
                    </p>
                    <p>
                        <span>
                            <img style="padding-right: 10px;" src="~/Images/steps.png" />
                            Faults of Bearing Cracks
                        </span>
                    </p>
                </div>
                <div class="col-md-4">
                    
                    <img src="~/Images/ballbearingtypes.PNG" class="img-thumbnail"/>
                </div>

                <div class="col-md-4">

                    <img src="~/Images/ball%20bearing%20defects.png" class="img-thumbnail" />
                   
                </div>

            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <p>
                    <span style=" font-size:16px; color:#49b1d1;text-decoration:underline">
                        Cost for Analysis
                    </span>

                </p>
                @Html.Partial("_CostTable", Model.CostList)

            </div>
            <div class="col-md-offset-0 col-md-4">
                <img src="~/Images/bearingfft.PNG" class="img-thumbnail" />
                @*<img src="~/Images/Fanfft.PNG" class="img-responsive" />*@

            </div>
            <br />
        </div>

        <div class="row">

            <div class=" col-md-3 services img-thumbnail" style="background-color: #ff6600; margin-left: 10px; margin-bottom: 10px;">
                <a href="@Url.Action("GetSampleReport", "UploadDownload", new { area = "", id = "Indicative Analysis"})" style="color:white" title="Indicative Analysis" target="blank">SampleReport For Indicative Analysis</a>
            </div>
            <div class=" col-md-3 services img-thumbnail" style="background-color: #ff6600; margin-left: 10px; margin-bottom: 10px;">
                <a href="@Url.Action("GetSampleReport", "UploadDownload", new { area = "", id = "VibAnalyst Analysis" })" style="color:white" title="VibAnalyst Analysis" target="blank">SampleReport For VibAnalyst Analysis</a>
            </div>
            <div class=" col-md-3 services img-thumbnail" style="background-color: #ff6600; margin-left: 10px; margin-bottom: 10px;">
                <a href="@Url.Action("Login", "Home", new { area = "", id = "VibAnalyst Analysis" })" style="color:white" title="Register Here">Not Register Yet! Please Register </a>
            </div>


        </div>

        <div class="row-fluid">
            <a style="margin-left:20px;margin-bottom:20px;color:blue;" id="btnUploadManual" class="btn btn-default" href="@Url.Action("UploadFile", "UploadDownload", new { flag=ViewBag.AnalysisMethod})" onclick="OnDeleteClick(this);"> Upload Your Data &raquo;</a>

        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
