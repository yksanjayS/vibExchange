@using VibExchange.Models
@model VibExchange.Models.LoginViewModel

@{
    ViewBag.Title = "User Login";
    Layout = "~/Views/Shared/_VibExchangeLayout.cshtml";

}
<div class="container row-fluid">
    <h4 style="color: chocolate">Please Enter Your Login Deatil. </h4>
    <div class="row-fluid">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            <i class="fa fa-user"></i>
                            @Html.TextBoxFor(m => m.UserName, new { @class = " form-control" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            <i class="fa fa-lock"></i>
                            @Html.PasswordFor(m => m.Password, new { @class = " form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-default" />
                        </div>
                    </div>
                    <div class="row-fluid form-group">
                        <p>@Html.ActionLink("Forgot Your Password !", "ForgotPassword")</p>
                    </div>
                }
            </section>
        </div>
        <div class="col-md-4">
            <div class="row-fluid form-group">
                <a href="@Url.Action("UserRegister", "Home")" class="btn btn-success">Register as a new Customer</a>
            </div>
            <div class="row-fluid form-group">
                <a href="@Url.Action("EmployerRegister", "Employee")" class="btn btn-success">Register as a new Consultant</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


